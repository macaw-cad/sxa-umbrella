    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "PowerShell: Validate",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/tools/validate.ps1",
            "cwd": "${workspaceFolder}"
        },       
        {
            "name": "PowerShell: Test",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/tools/test.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp: fullDeploy",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "--gulpfile", "tools/gulpfile.js",
                "fullDeploy"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Gulp: watch",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "--gulpfile", "tools/gulpfile.js",
                "watch"
            ],
 
            "skipFiles": [
                "<node_internals>/**"
            ]
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Webpack: development",
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--env.NODE_ENV=development",
                "--mode=development",
                "--config", "webpack.config.js"
            ],
            "cwd": "${workspaceFolder}/config"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Webpack: production",
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--env.NODE_ENV=production",
                "--mode=production",
                "--config", "webpack.config.js"
            ],
            "cwd": "${workspaceFolder}/config"
        }
    ]
}